\newcommand{\submittedtext}{\large {\bfseries {LUẬN VĂN THẠC SĨ}}}

% These macros define an environment for front matter that is always 
% single column even in a double-column document.

% Define title page layout
\def\maketitle{
	\pagenumbering{roman} 
	\setcounter{page}{0}
  	\begin{titlepage}
    	\begin{center}
     		{\bfseries{\@university} \par}
     		{\bfseries{\@faculty} \par}
     		{\vspace*{15mm} {{\@image}\par}\vspace*{10mm}}
     		{{\submittedtext} \par}
  			\vspace*{10mm}
     		{ \LARGE {\bfseries {\@title \par}} \vspace*{15mm}}
     			SINH VIÊN THỰC HIỆN:\\
    		{{\Large \@author} \par \vspace*{10mm}}
    			GIẢNG VIÊN HƯỚNG DẪN:\\
	 		{{\Large \@supervisor} \par \vspace*{15mm}} 
	 		{\large  {\@submitdate}}
  		\end{center}
  	\end{titlepage}
}

\def\titlepage{
  \newpage
  \centering
  \linespread{1}
  \normalsize
  \vbox to \vsize\bgroup\vbox to 9in\bgroup
}
\def\endtitlepage{
  \par
  \kern 0pt
  \egroup
  \vss
  \egroup
  \cleardoublepage
}

